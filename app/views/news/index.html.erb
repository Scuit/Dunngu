<h1>Listing news</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Category</th>
      <th>Province</th>
      <th>Title</th>
      <th>Body</th>
      <th>Date time</th>
      <th>Image</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.user %></td>
        <td><%= news.category %></td>
        <td><%= news.province %></td>
        <td><%= news.title %></td>
        <td><%= news.body %></td>
        <td><%= news.date_time %></td>
        <td><%= news.image %></td>
        <td><%= news.status %></td>
        <td><%= link_to 'Show', news %></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

