<%= form_for(@new, :html => { :multipart => true }) do |f| %>
<% if @new.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@new.errors.count, "error") %> prohibited this new from being saved:</h2>

  <ul>
    <% @new.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="modal-body">
  <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="field">
    <%= label_tag :category_id, 'Categoría' %><br>
    <%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :name), prompt: 'Seleccione categoría', class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :sub_category_id, 'Subcategoría' %><br>
    <%= f.select :sub_category_id, options_for_select([['No ha sido seleccionado ninguna categoría', 0]]), {}, {class: 'form-control' }%>
  </div>
  <div class="field">
    <%= label_tag :region_id, 'Región' %><br>
    <%= select_tag :region_id, options_from_collection_for_select(Region.all, :id, :name), prompt: 'Seleccione región', class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :province_id, 'Provincia' %><br>
    <%= f.select :province_id, options_from_collection_for_select(@all, :id, :name), {prompt: 'No ha seleccionado una región'}, {class: 'form-control'} %>
  </div>
  <div class="field">
    <%= f.label :title, 'Título' %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :body, 'Cuerpo' %><br>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :image, 'Imagen' %><br>
    <%= image_tag @new.image.url, size: '50x50' unless  @new.image.url.nil? %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>
</div>

<div class="modal-footer">
  <%= f.submit 'Ingresar', class: 'btn btn-primary' %>
</div>
<% end %>
